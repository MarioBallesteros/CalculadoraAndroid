<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="412dp"
        android:layout_height="400dp"
        android:layout_marginBottom="120dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-4dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="390dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/boton1"
                    android:layout_width="wrap_content"
                    android:layout_height="85dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="1" />

                <Button
                    android:id="@+id/boton2"
                    android:layout_width="wrap_content"
                    android:layout_height="85dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="2" />

                <Button
                    android:id="@+id/boton3"
                    android:layout_width="wrap_content"
                    android:layout_height="85dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="3" />

                <Button
                    android:id="@+id/botondiv"
                    android:layout_width="wrap_content"
                    android:layout_height="85dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="/" />

            </TableRow>

            <TableRow
                android:layout_width="408dp"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/boton4"
                    android:layout_width="wrap_content"
                    android:layout_height="85dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="4" />

                <Button
                    android:id="@+id/boton5"
                    android:layout_width="wrap_content"
                    android:layout_height="85dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="5" />

                <Button
                    android:id="@+id/boton6"
                    android:layout_width="wrap_content"
                    android:layout_height="85dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="6" />

                <Button
                    android:id="@+id/botonmult"
                    android:layout_width="wrap_content"
                    android:layout_height="85dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="*" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/boton7"
                    android:layout_width="wrap_content"
                    android:layout_height="85dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="7" />

                <Button
                    android:id="@+id/boton8"
                    android:layout_width="wrap_content"
                    android:layout_height="85dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="8" />

                <Button
                    android:id="@+id/boton9"
                    android:layout_width="wrap_content"
                    android:layout_height="85dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="9" />

                <Button
                    android:id="@+id/botonmenos"
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="-"
                    android:textSize="20sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/botonpunto"
                    android:layout_width="wrap_content"
                    android:layout_height="85dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="." />

                <Button
                    android:id="@+id/boton0"
                    android:layout_width="wrap_content"
                    android:layout_height="85dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="0" />

                <Button
                    android:id="@+id/botonigual"
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="=" />

                <Button
                    android:id="@+id/botonmas"
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="+" />

            </TableRow>

        </TableLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="335dp"
        android:layout_height="93dp"
        android:gravity="center"
        android:text="0.0"
        android:textAlignment="viewStart"
        android:textSize="20sp"
        app:flow_horizontalAlign="end"
        app:flow_verticalAlign="center"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.21"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.681" />

    <Button
        android:id="@+id/botonreturn"
        android:layout_width="112dp"
        android:layout_height="74dp"
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:text="borrar"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/botonC"
        android:layout_width="112dp"
        android:layout_height="74dp"
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:text="C"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toStartOf="@+id/botonreturn" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="MOSTRAR OPCIONES DESHABILITAR"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="413dp"
        android:layout_height="95dp"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBox"
        tools:visibility="visible">

        <RadioButton
            android:id="@+id/rSuma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:onClick="onRadioClick"
            android:text="Suma" />

        <RadioButton
            android:id="@+id/rResta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:onClick="onRadioClick"
            android:text="Resta" />

        <RadioButton
            android:id="@+id/rMult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:onClick="onRadioClick"
            android:text="Multiplicación" />

        <RadioButton
            android:id="@+id/rDiv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:onClick="onRadioClick"
            android:text="División" />

    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>